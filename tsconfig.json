{
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "./stories"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    // "target": "es6",
    // "module": "es2015",
    // "lib": [
    //   "dom",
    //   "es5",
    //   "es6"
    // ],
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDirs": ["./src", "./stories"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true
  }
}